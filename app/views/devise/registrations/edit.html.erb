<div class="container">
  <div class="col-md-6 col-md-offset-3">
    <h2>プロフィールの編集</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :姓 %><br />
        <%= f.text_field :lastname %>
      </div>

      <div class="field">
        <%= f.label :名 %><br />
        <%= f.text_field :firstname %>
      </div>

      <div class="field">
        <%= f.label :ユーザーネーム %><br />
        <%= f.text_field :username %>
      </div>

      <div class="field">
        <%= f.label :プロフィール画像 %><br />
        <%= f.file_field :image_name %>
      </div>

      <div class="field">
        <%= f.label :website %><br />
        <%= f.text_field :website %>
      </div>

      <div class="field">
        <%= f.label :自己紹介 %><br />
        <%= f.text_field :profile %>
      </div>

      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :電話番号 %><br />
        <%= f.telephone_field :tel %>
      </div>

      <div class="field">
        <%= f.label :性別 %><br />
        <label><%= f.radio_button :sex, "1" %>男</label>
        <label><%= f.radio_button :sex, "2" %>女</label>
      </div>

      <div class="field pass">
        <%= link_to "パスワードの変更", password_edit_path, class:"btn btn-warning" %>
      </div>

      <div class="actions">
        <%= f.submit "更新", class: "btn btn-primary" %>
      </div>
    <% end %>

    <h3>アカウントの削除</h3>

    <%= button_to "削除", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %>

    <%= link_to "戻る", :back %>
  </div>
</div>
